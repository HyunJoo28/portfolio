/* -- desktop( 1025px ~ ? ) -- */
@media screen and (min-width: 1025px) {

.inner_wrap { width: 100%; max-width: 1160px; margin: 0 auto; }
h2 { font-family: 'NotoSansKR-Bold'; font-size: 3.125em; color: #000;}
p.h2_desc { margin-top: calc(1.5vh); font-size: 1.25em; color: #333; line-height: 1.5em;}

header { position: fixed; width: 100%; height: 150px; z-index: 10; transition: all 0.3s; }
header > div.header { width: 100%; height: 100%; }
header > div.header > div.logo { float: left;  margin-left: 4%;}
header > div.header > div.logo > h1 > a { display: block; width:251px; height: 70px; margin: 40px 0; background: url("../images/logo.png") no-repeat center center; text-indent: -9999em; transition: all 0.3s; }
header > div.header > a { position: relative; display: block; float: right; width: 40px; height: 35px; margin: 57px 4% 58px 0; text-indent: -99999em; transition: all 0.3s; }
header > div.header > a > div { position: absolute; width: 40px; height: 4px; background: #fff; z-index: 100;}
header > div.header > a:hover > div { background: #ccc; }
header > div.header > a > div.toggle_top { top: 0; left: 0; }
header > div.header > a > div.toggle_middle { top: 50%; left: 0; transform: translateY(-50%); }
header > div.header > a > div.toggle_bottom { bottom: 0; left: 0; }
header > nav { display: none; }
header > nav.on { display: block; position: absolute; top:0; left: 0; width: 100vw; height: 100vh; background: black; text-align: center;}
header > nav.on > ul { position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);}
header > nav.on > ul > li > a { font-size: 3em; font-family: 'NotoSansKR-Bold'; color: #fff; line-height: 2em; }

header.black { height: 100px; background: #000; }
header.black > div.header > div.logo > h1 > a { margin: 15px 0; }
header.black > div.header > a { margin: 33px 4% 32px 0; }

section > article.atc_visual { position: relative; width: 100vw; height: 100vh; background: url("../images/img_visual_01.jpg") no-repeat; background-size: cover; background-position: center center; text-align: center;}
section > article.atc_visual > div.visual_title { padding-top: calc(100vh / 3); }
section > article.atc_visual > div.visual_title > p.sup_title { margin-bottom: 20px; font-size: 1.875em; color: #fff; }
section > article.atc_visual > div.visual_title > p.main_title { font-family: 'NotoSansKR-Medium'; font-size: 3.125em; color: #fff; }
section > article.atc_visual > div.scroll { position: absolute; bottom: 5%; left: 50%; transform: translateX(-50%); }
section > article.atc_visual > div.scroll > div { position: relative; width: 34px; height: 40px; margin: 0 auto; }
section > article.atc_visual > div.scroll > div > span.animation { display: block; position: absolute; top: 0; left: 0; width: 34px; height: 12px;  background: url("../images/ico_scroll.png") no-repeat;
    animation-name: scroll; animation-duration: 1.5s; animation-iteration-count: infinite;}
section > article.atc_visual > div.scroll > p { color: #fff; }

@keyframes scroll {
    from { 
        top: 0; opacity: 1; transform: scale(1);
        animation-timing-function: ease;
    }
    to {
        top: 20px; opacity: 0; transform: scale(0.9);
    }
}

section > article.atc_aboutme {  width: 100%; height: calc(100vh - 100px); min-height: 720px; max-height: 980px; padding-top: calc(6.6vh); background: #eee; text-align: center; }
section > article.atc_aboutme > div.inner_wrap > ul > li { position: relative; float: left; width: 31%; height: 0; margin-right: 3.5%; margin-top: calc(5vh); padding-top: 26%; overflow: hidden;}
section > article.atc_aboutme > div.inner_wrap > ul > li:last-child { margin-right: 0; }
section > article.atc_aboutme > div.inner_wrap > ul > li > div { position: absolute; top: 0; left: 0; width: 100%; height: 100%;  background: #fff; }
section > article.atc_aboutme > div.inner_wrap > ul > li > div > img { margin-top: 7%; }
section > article.atc_aboutme > div.inner_wrap > ul > li > div > p.ico_title { margin-bottom: 7%; font-family: 'NotoSansKR-Bold'; font-size: 1.125em; color: #7ac3d1;  }
section > article.atc_aboutme > div.inner_wrap > a { display: block; width: 280px; height: 62px; margin: 0 auto; margin-top: calc(7vh); color: #fff; font-family: 'NotoSansKR-Bold'; line-height: 62px; background: #7ac3d1; }
section > article.atc_aboutme > div.inner_wrap > a > span { font-family: 'NotoSansKR-Regular'; font-size: 0.875em;  margin-left: 20px; }

section > article.atc_portpolio { padding-top: calc(6.6vh);  padding-bottom: calc(6.6vh); text-align: center; }
section > article.atc_portpolio > ul.tab { display: inline-block; margin: 0 auto; margin-top: calc(1.5vh); margin-bottom: calc(5vh);}
section > article.atc_portpolio > ul.tab > li { float: left; margin-right: 10px; }
section > article.atc_portpolio > ul.tab > li:last-child { margin-right: 0; }
section > article.atc_portpolio > ul.tab > li > a { display: block; width: 157px; padding: 20px 0; font-family: 'NotoSansKR-Medium'; font-size: 1.125em; color: #999; }
section > article.atc_portpolio > ul.tab > li:hover > a,
section > article.atc_portpolio > ul.tab > li.active > a { padding-bottom: 16px; border-bottom: 4px solid #000; font-family: 'NotoSansKR-Bold'; color: #000; }

section > article.atc_portpolio > ul.contents > li { display: block; float: left; width: 48%; height: auto; margin: 3.4482% 1% 0 1%; border-bottom: 2px solid #ccc; }
section > article.atc_portpolio > ul.contents > li > a { position: relative; display: block; width: 100%; height: 100%; background: #f5f5f5; }
section > article.atc_portpolio > ul.contents > li > a > img { display: block; width: 100%; height: 100%;  }
section > article.atc_portpolio > ul.contents > li > a > div { position: absolute; bottom: 8%; left:0; width: 100%;}
section > article.atc_portpolio > ul.contents > li > a > div > p.port_title { margin-bottom: 3%; font-family: 'NotoSansKR-Medium'; font-size: 1.5em; color: #333; }
section > article.atc_portpolio > ul.contents > li > a > div > p.port_desc { font-size: 1.125em; color: #999; }

section > article.atc_portpolio > ul.contents > li.active { animation-name: active; animation-duration: 0.3s;  animation-iteration-count: 1;}

@keyframes active {
    from { 
        opacity: 0; transform: scale(0);
        animation-timing-function: ease;
    }
    to {
        opacity: 1; transform: scale(1);
    }
}

section > article.atc_artwork { width: 100%; height: calc(100vh - 100px); min-height: 720px; max-height: 980px; padding-top: calc(6.6vh); background: #f5f5f5; text-align: center; }
section > article.atc_artwork > div.inner_wrap > div.slide { position: relative; height: 540px; margin-top: calc(5vh);}
section > article.atc_artwork > div.inner_wrap > div.slide > a.slide_prev { position: absolute; top: 50%; left: 0; height: 112px; width: 57px; background: url("../images/ico_left_B.png") no-repeat center center; text-indent: -9999em; opacity: 0.5; transform: translateY(-50%); }
section > article.atc_artwork > div.inner_wrap > div.slide > a.slide_next { position: absolute; top: 50%; right: 0; height: 112px; width: 57px; background: url("../images/ico_right_B.png") no-repeat center center; text-indent: -9999em; opacity: 0.5; transform: translateY(-50%); }
section > article.atc_artwork > div.inner_wrap > div.slide > a:hover { opacity: 1; }
section > article.atc_artwork > div.inner_wrap > ul.paginations { display: inline-block; margin: 0 auto; margin-top: 30px; }
section > article.atc_artwork > div.inner_wrap > ul.paginations > li { float: left; width: 60px; height: 6px; margin-right: 20px; background: #999; transition: all 0.5s;}
section > article.atc_artwork > div.inner_wrap > ul.paginations > li:last-child { margin-right: 0; }
section > article.atc_artwork > div.inner_wrap > ul.paginations > li.sel { background: black; }

div.slide > div.form { position: relative; width: 847px; height: 540px; margin: 0 auto;}
div.slide > div.form > a { display: block; position: absolute; top: 0; left: 0; width: 100%; height: 100%; box-shadow: 0 0 40px #dbdbdb; opacity: 0; z-index: 1; }
div.slide > div.form > a > img { display: block; width: 100%; height: 100%; }
div.slide > div.form > a > div { position: absolute; bottom: 0; left: 0; padding: 40px; text-align:left;}
div.slide > div.form > a > div > p.art_title { font-family: 'NotoSansKR-Medium'; font-size: 1.5625em; color: #7ac3d1; }
div.slide > div.form > a > div > p.art_desc { font-family: 'NotoSansKR-Medium'; font-size: 1.875em; color: #000; }

div.slide > div.form > a.prev { opacity: 0; z-index: 4; transform: translate(-30%, 30%) scale(1.4);}
div.slide > div.form > a.cur { opacity: 1; z-index: 3; }  
div.slide > div.form > a.next { opacity: 0.7; z-index: 2; transform: translate(10%, -10%) scale(0.9); } 
div.slide > div.form > a.standby  { opacity: 0; z-index: 1; transform: translate(20%, -20%) scale(0.8); }


section > article.atc_contactme { width: 100%; height: calc(100vh - 100px); min-height: 720px; max-height: 980px; padding-top: calc(6.6vh); background: url("../images/img_contact.jpg") no-repeat; background-size: cover; background-position: center center; background-attachment: fixed; text-align: center; }
section > article.atc_contactme > p > span.phone { position: relative; margin-right: 80px; }
section > article.atc_contactme > p > span.phone:before { display: block; content: ""; position: absolute; top: 0; left: -30px; width: 24px; height: 28px; background: url("../images/ico_phone.png") no-repeat center center; }
section > article.atc_contactme > p > span.email { position: relative; }
section > article.atc_contactme > p > span.email:before { display: block; content: ""; position: absolute; top: 0; left: -30px; width: 24px; height: 28px; background: url("../images/ico_email.png") no-repeat center center; }
section > article.atc_contactme > form { width: 1024px;  margin: 0 auto; margin-top: calc(15vh);}
section > article.atc_contactme > form > div.inputs > input { width: 48%; height: 70px; margin-right: 3.6%; padding: 20px 35px; font-family: 'NotoSansKR-Medium'; font-size: 1.375em; border: none; color: #000;}
section > article.atc_contactme > form > div.inputs > input:last-child { margin-right: 0; }
section > article.atc_contactme > form > textarea { width: 100%; height: 150px; margin-top: 20px; padding: 20px 35px; font-family: 'NotoSansKR-Medium'; font-size: 1.375em; border: none; resize: none; }
section > article.atc_contactme > form > div.submit > input { float: right; width: 48%; height: 70px; margin-top: 40px; font-family: 'NotoSansKR-Medium'; font-size: 1.375em; background: #7ac3d1; border: none; color: #fff; cursor: pointer; }

footer { height: 100px; background: #000; }
footer > p.copyright { float: left; margin-left: 4%; margin-top: 39px; color: #999; }
footer > p.links { float: right; margin-right: 4%; margin-top: 32px; }
footer > p.links > a.git { display: inline-block; width: 33px; height: 33px; background: url("../images/ico_github.png") no-repeat; text-indent: -9999em; }
footer > p.links > a.facebook { display: inline-block; width: 33px; height: 33px; margin-left:20px; background: url("../images/ico_facebook.png") no-repeat; text-indent: -9999em; }

div.modal_popup { display: none; position: fixed; width: 100%; height: 100%; background: rgba(0,0,0,1); top: 0; left: 0; z-index: 900;}
div.modal_popup > a.close { position: absolute; top:4%; right: 4%; width: 50px; height:50px; background: url("../images/ico_close.png") no-repeat; border: 0; opacity: 0.5; text-indent: -9999em; }
div.modal_popup > a.modal_left { position: absolute; top: 50%; left: 4%; width: 29px; height: 56px; background: url("../images/ico_left_W.png") no-repeat; background-size: cover; transform: translateX(-50%); opacity: 0.5; text-indent: -9999em; }
div.modal_popup > a.modal_right { position: absolute; top: 50%; right: 4%; width: 29px; height: 56px; background: url("../images/ico_right_W.png") no-repeat;background-size: cover; transform: translateX(-50%); opacity: 0.5; text-indent: -9999em; }
div.modal_popup > a { z-index: 910; }
div.modal_popup > a:hover { opacity: 1; }
div.modal_popup > div { position: relative; width: 80%; height: 100%; margin:0 auto;  }
div.modal_popup > div > img { display: block; position: absolute; top: 50%; left: 50%; max-width:100%; max-height: 100%; margin:0 auto; transform: translate(-50%,-50%); }

}